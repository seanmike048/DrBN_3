# 1) Build
FROM node:20-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

# 2) Serve (Cloud Run expects $PORT)
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html

# Nginx config to listen on $PORT
RUN printf 'server {\n\
  listen ${PORT};\n\
  server_name _;\n\
  root /usr/share/nginx/html;\n\
  index index.html;\n\
  location / {\n\
    try_files $uri $uri/ /index.html;\n\
  }\n\
}\n' > /etc/nginx/conf.d/default.conf

# Default Cloud Run port
ENV PORT=8080
EXPOSE 8080
CMD ["nginx", "-g", "daemon off;"]
